<%= simple_form_for(@certification) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :type %>
    <%= f.input :completed_date %>
    <%= f.input :expiry_date %>
    <%= f.input :issuer %>
    <%= f.input :instructor_name %>
    <%= f.association :user %>
    <%= f.input :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
